<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/icx_title"
        android:background="@color/icx_title_main_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信(20)"
            android:textColor="@color/icx_white"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"/>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:id="@+id/rl_main_add">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icx_main_add"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icx_search_icon"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>


    </RelativeLayout>
    <FrameLayout
        android:id="@+id/rl_containter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rdg_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/icx_white">

        <RadioButton
            android:id="@+id/rb_videos"
            style="@style/rb_style"
            android:checked="true"
            android:drawableTop="@drawable/icx_navi_channel_selector"
            android:text="微信" />

        <RadioButton
            android:id="@+id/rb_novel"
            style="@style/rb_style"
            android:drawableTop="@drawable/icx_navi_sub_selector"
            android:text="通讯录" />

        <RadioButton
            android:id="@+id/rb_cartoon"
            style="@style/rb_style"
            android:drawableTop="@drawable/icx_new_navi_discover_selector"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/rb_style"
            android:drawableTop="@drawable/icx_navi_profile_selector"
            android:text="我" />
    </RadioGroup>
</LinearLayout>
