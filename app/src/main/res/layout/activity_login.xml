<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icx_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/icx_title"
        android:background="@color/icx_title_main_bg">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:text="登录"
                    android:textColor="@color/icx_white"
                    android:textSize="18sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            >

            <RelativeLayout
                android:id="@+id/izd_rlBack"
                android:layout_width="wrap_content"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/izd_ivBack"
                    android:layout_width="9dp"
                    android:layout_height="16dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/icx_back_white" />

                <TextView
                    android:id="@+id/izd_tvBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/izd_ivBack"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="@color/icx_white"
                    android:textSize="16dp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icx_threepoint" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/red_apple"
        android:layout_marginTop="120dp"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Tony"
        android:textSize="14dp"
        android:paddingLeft="5dp"
        android:background="@drawable/bg_et"
        />
    <!--android:hint="账号/QQ号/邮箱号"-->

    <EditText
        android:id="@+id/et_password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_name"
        android:layout_marginTop="2dp"
        android:text="12345tony"
        android:password="true"
        android:textSize="14dp"
        android:paddingLeft="5dp"
        android:background="@drawable/bg_et"
        />
    <!--android:hint="密码"-->


    <Button
        android:id="@+id/btn_login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_login_login"
        android:layout_below="@id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="登录"
        android:textColor="@color/icx_white"
        />


</RelativeLayout>
